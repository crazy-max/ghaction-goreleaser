{
  "name": "goreleaser-action",
  "description": "GitHub Action for GoReleaser, a release automation tool for Go projects",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "test": "jest --coverage",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pre-checkin": "yarn run format && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goreleaser/goreleaser-action.git"
  },
  "keywords": [
    "actions",
    "goreleaser",
    "golang"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/http-client": "^1.0.11",
    "@actions/tool-cache": "^1.7.1",
    "js-yaml": "^4.1.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.6",
    "@vercel/ncc": "^0.28.6",
    "dotenv": "^8.6.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-runtime": "^26.6.3",
    "prettier": "^2.3.2",
    "tmp": "^0.2.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5",
    "typescript-formatter": "^7.2.2"
  }
}
